@model BeHeard.Models.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}
@*<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>*@
@*<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>*@


<!-- Modal -->
<div class="m-4">
    <div id="myModal" class="modal fade" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content modal-xl">
                <div class="modal-header">
                    <h5 class="modal-title">Your Account Has Been Created!</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row justify-content-md-center">
                        <div class="col col-lg-4">
                            <img src="/images/image3.png" class="img-responsive h-100" alt="Responsive image" />
                        </div>
                        <div class="col-lg-5 ">
                            <div class="row h-100">
                                <div></div>
                                <div class="rounded h-auto border border-dark">
                                    <p class="fw-bold fs-5">Welcome!</p>
                                    <p>We just have a few more things to get sorted out for you.  You can change these anytime in your account settings.</p>
                                </div>
                                <div></div>
                            </div>
                        </div>
                        <div class="col-lg-auto"></div>
                    </div>
                    <hr style="width:100%" size="3" color="black">
                    <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="FirstLogin">
                        <div class="row">
                            <div class="list-group">
                                <div class="list-group-item">
                                    <div class="row align-items-center">
                                        <div class="col">
                                            <strong class="mb-0">Text to speech</strong>
                                            <p class="text-muted mb-0">Check to enable voice to text to speech narration</p>
                                        </div>
                                        <div class="col-auto">
                                            <input type="checkbox" class="form-check-input" name="Preferences.TextToSpeech" value="true" />
                                            <span class="form-check-label"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="list-group-item">
                                    <div class="row align-items-center">
                                        <div class="col">
                                            <strong class="mb-0">Color Blind Mode</strong>
                                            <p class="text-muted mb-0">Check to enable Color Blind Mode</p>
                                        </div>
                                        <div class="col-auto">
                                            <input type="checkbox" class="form-check-input" name="Preferences.ColorBlindMode" value="true" />
                                            <span class="form-check-label"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="list-group-item">
                                    <div class="row align-items-center">
                                        <div class="col">
                                            <strong class="mb-0">Dark mode</strong>
                                            <p class="text-muted mb-0">Check to enable dark mode</p>
                                        </div>
                                        <div class="col-auto">
                                            <input type="checkbox" class="form-check-input" name="Preferences.DarkMode" value="true" />
                                            <span class="form-check-label"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <p class="text-secondary text-center"><small>If you don't save, your changes will be set to defaults.</small></p>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row align-items-center vh-100">
    <div class="col">
        <div class="col-12 text-center pb-3">
            <h1 class="display-4">Welcome @Model.FullName</h1>
        </div>
        <div class="row justify-content-center">
            <div class="col-3 m-3 d-flex align-items-center justify-content-center" style="background-color: #fff2ec; height: 200px; border-radius: 8px;">
                <div class="row text-center">
                    <a class="nav-link text-dark" asp-area="" asp-controller="SpeechProcess" asp-action="Index">
                        <div class="col-12">
                            <i class="fas fa-microphone-alt fa-4x"></i>
                        </div>
                        <div class="col-12">
                            <h3>Start a new session</h3>
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-3 m-3 d-flex align-items-center justify-content-center" style="background-color: #fff2ec; height: 200px; border-radius: 8px;">
                <div class="row text-center">
                    <div class="col-12">
                        <i class="fas fa-arrow-alt-circle-right fa-4x"></i>
                    </div>
                    <div class="col-12">
                        <h3>Continue your session</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{ 
    <script type="text/javascript">
        var url = window.location.href;
        if (url.indexOf('?newuser=1') != -1 || url.IndexOf('/?newuser=1') != -1) {
            $(document).ready(function () {
                $("#myModal").modal("show");
            });
        }

        $('#checkbox-value').text($('#checkbox').val());

        $("#checkbox").on('change', function () {
            if ($(this).is(':checked')) {
                $(this).attr('value', 'true');
            } else {
                $(this).attr('value', 'false');
            }
        });
    </script>
}