@{
    var routeUrl = ViewContext.RouteData.Values["Controller"].ToString();
    var pages = new List<string> { "Login", "Logout" };
    if (pages.Any(routeUrl.Contains))
    {
        Layout = "_NoNavLayout";
    }
    else
    {
        if (routeUrl.Contains("Landing"))
            Layout = "_LandingLayout";
        else
            Layout = "_Layout";
    }
}
