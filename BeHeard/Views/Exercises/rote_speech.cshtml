@using Microsoft.AspNetCore.Http

<!--Exercises-->
@model BeHeard.Models.ExerciseViewModel

@{

}
<!DOCTYPE html>
<html>
<body onload="difficulty_dropdown()">
<br />
<div style="outline-style:solid;outline-color:black;text-align:center;">
    <h1>Hello @Model.FullName</h1>
    <h2>Exercise - Rote Speech</h2>
</div>
<div class="navbar" id="myNavbar">
    <a class="link" asp-area="" asp-controller="Exercises" asp-action="volume_chasing">Volume Chasing Exercise</a>
    <a class="link" asp-area="" asp-controller="Exercises" asp-action="breathing">Breathing Exercise</a>
    <a class="link" asp-area="" asp-controller="Exercises" asp-action="volume_phrasing">Phrasing Exercise</a>
</div>
<br />
<div class="container">
    <div class="row">
        <div id="instructions" class="column" style="width:50%;">
            <p>Welcome to the rote speech and volume exercise!</p>
            <p>In this exercise, you will choose from an assortment of common, everday phrases and speak those phrases back.</p>
            <p>Your goal is to speak the phrases clearly and concisely.</p>
            <p>There is a time limit of 30 seconds, but don't worry, time is <strong>not</strong> important.</p>
        </div>
        <div class="column" style="width:50%;">
            <div id="diff_directions">
                <p>Choose the difficulty of the exercise in the dropdown!</p>
            </div>
            <div id="diff_dropdown">
                <label for="difficulties">Choose a Difficulty: </label>
                <select name="difficulty" id="diff_option" onchange="difficulty_dropdown()">
                    <option value="easy">easy</option>
                    <option value="medium">medium</option>
                    <option value="hard">hard</option>
                    <option value="impossible">impossible</option>
                </select>
            </div>
            <div id="diff_alert"></div>
        </div>
    </div>
    <br />
    <div id="dropdown">
        <label for="rote options">Choose your category:</label>
            <select name="option" id="option">
                <option value="0">Cities</option>
                <option value="1">Directions</option>
                <option value="2">Phone Numbers</option>
                <option value="3">Common Requests</option>
                <option value="4">Meal Orders</option>
            </select>
    </div>
    <br />
    <div class="container">
        <div id="sentence_id">
            <h3>Choose your sentence!</h3>
            <div id="random_button">
                <button id="random" type="button" onclick="getSentence()">Randomize</button>
            </div>
            <div id="random_sentence" style="font-size:25px"></div>
        </div>
    </div>
    <br />
    <div>
    <!-- The canvas that will be used to render the input level -->
        <canvas id="meter" width="300" height="50" style="border: 1px solid black;"></canvas>
        <div id="Buttons">
            <button id="startButton" type="button" onclick="start_timer()">Start</button>
            <button id="stopButton" type="button" onclick="Stop()">Stop</button>
            <button id="pauseButton" type="button" onclick="Pause()">Pause</button>
            <button id="resumeButton" type="button" onclick="Resume()">Resume</button>
        </div>
    </div>
    <br />
    <div id="database_area">
        <table style="width:100%;">
            <caption style="caption-side:top;">@Model.FullName, Volume Phrasing Exercise Results</caption>
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Difficulty</th>
                    <th>Sentence Set</th>
                    <th>Volume Level</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>04/25/22</td>
                    <td>Easy</td>
                    <td>Cities 4</td>
                    <td>~30 dba</td>
                </tr>
                <tr>
                    <td>04/26/22</td>
                    <td>Easy</td>
                    <td>Phone Numbers 1</td>
                    <td>~40 dba</td>
                </tr>
                <tr>
                    <td>04/28/22</td>
                    <td>Easy</td>
                    <td>Meal Orders 2</td>
                    <td>~30 dba</td>
                </tr>
                <tr>
                    <td>04/29/22</td>
                    <td>Medium</td>
                    <td>Cities 3</td>
                    <td>~40 dba</td>
                </tr>
                <tr>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                </tr>
            </tbody>
        </table>
    </div>
    <!--Tips for exercise-->
    <div class="container p-5 my-5 bg-dark text-white">
        <div class="row">
            <h2>Nice Job @Model.FullName!</h2>
            <h3>Keep it up!</h3>
            <h6>Here are some tips for next time!</h6>
            <div class="list-group list-group-flush">
                <a href="#" class="list-group-item">This exercise is purely functional, we know it's not interesting, but keep it up!</a>
                <a href="#" class="list-group-item">If you get frustrated, take a break!</a>
                <a href="#" class="list-group-item">On your own, practice your address, your car make, model and year, or the name of your job!</a>
            </div>
        </div>
    </div>
</div>
</body>
</html>

@section Scripts
{
    <script type="text/javascript" src="~/js/Exercises/rote_speech.js"></script>
}