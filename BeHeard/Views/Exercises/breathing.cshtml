</div>
</body>
</html>

<style>
    /*** Team ***/
    .activity-box {
        box-shadow: 0 0 40px rgba(0, 0, 0, .08);
        height: calc(100% - 250px);
        min-height: 150px;
        transition: .5s;
    }

    .activity-box h1 {
        color: dodgerblue;
        transition: .5s;
    }

    .activity-box:hover h1 {
        transform: scale(1.5);
    }

    .activity-box:hover {
        height: 100%;
    }

    .activity-box .btn {
        border-radius: 38px 38px 0 0;
    }

    #breathing_anim {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 300px;
        width: 300px;
        margin: auto;
        position: relative;
        transform: scale(1);
    }

    #breathing_anim.grow7 {
        animation: grow 7.5s linear forwards;
    }

    #breathing_anim.shrink7  {
        animation: shrink 7.5s linear forwards;
    }

    #breathing_anim.grow9 {
        animation: grow 9.5s linear forwards;
    }

    #breathing_anim.shrink9  {
        animation: shrink 9.5s linear forwards;
    }

    #breathing_anim.grow11 {
        animation: grow 11.5s linear forwards;
    }

    #breathing_anim.shrink11  {
        animation: shrink 11.5s linear forwards;
    }

    #breathing_anim.grow15 {
        animation: grow 15.5s linear forwards;
    }

    #breathing_anim.shrink15  {
        animation: shrink 15.5s linear forwards;
    }

    .gradient-circle {
        display: flex;
        background: conic-gradient(
        #FF8B00 50%,
        #FF8B00 50%,
        dodgerblue 50%,
        dodgerblue 100%
        );
        height: 320px;
        width: 320px;
        position: absolute;
        z-index: -2;
        border-radius: 50%;
    }

    .circle {
        display: flex;
        background-color: white;
        margin: auto;
        align-items: center;
        justify-content: center;
        height: 100%;
        width: 100%;
        position: absolute;
        z-index: -1;
        border-radius: 50%;
    }

    #rotating_ball {
        display: flex;
        position:absolute;
        top: -30px;
        left: 140px;
        width: 20px;
        height: 180px;
        transform-origin: bottom center;
    }

    #rotating_ball.rotate7 {
        display: flex;
        position:absolute;
        top: -30px;
        left: 140px;
        width: 20px;
        height: 180px;
        transform-origin: bottom center;
        animation: rotate 15s linear forwards 1;
    }

    #rotating_ball.rotate9 {
        display: flex;
        position:absolute;
        top: -30px;
        left: 140px;
        width: 20px;
        height: 180px;
        transform-origin: bottom center;
        animation: rotate 19s linear forwards 1;
    }

    #rotating_ball.rotate11 {
        display: flex;
        position:absolute;
        top: -30px;
        left: 140px;
        width: 20px;
        height: 180px;
        transform-origin: bottom center;
        animation: rotate 23s linear forwards 1;
    }

    #rotating_ball.rotate15 {
        display: flex;
        position:absolute;
        top: -30px;
        left: 140px;
        width: 20px;
        height: 180px;
        transform-origin: bottom center;
        animation: rotate 31s linear forwards 1;
    }

    .pointer {
        display: flex;
        border-radius: 50%;
        background-color: black;
        height: 20px;
        width: 20px;
        display: block;
    }

    @@keyframes rotate {
        from {
            transform: rotate(0deg)
        }
        to {
            transform: rotate(360deg)
        }
    }

    @@keyframes grow {
        from {
            transform: scale(1)
        }
        to {
            transform: scale(1.2)
        }
    }

    @@keyframes shrink {
        from {
            transform: scale(1.2)
        }
        to {
            transform: scale(1)
        }
    }

</style>

@section Scripts
{
    <script type="text/javascript" src="~/js/Exercises/breathing.js"></script>
    <script src="~/js/app.js"></script>
}

