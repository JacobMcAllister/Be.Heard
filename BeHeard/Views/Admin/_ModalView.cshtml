@model BeHeard.Models.ProfileViewModel

<div id="ModalView" class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">User Details for: @Model.UserProfile.User.FirstName @Model.UserProfile.User.LastName</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
           <div class="col-12 bg-white px-3 mb-3 pb-3 shadow">
                @*
        Starting Account Information
                    *@
                    <div class="d-flex align-items-left">
                        <p class="fw-bold h4 mt-3">Account Information</p>
                    </div>
                    <div class="d-flex align-items-center justify-content-between border-bottom">
                        <p class="py-2">Username</p>
                        <p class="py-2 text-muted">@Model.UserProfile.User.Username</p>
                    </div>
                    <div class="d-flex align-items-center justify-content-between border-bottom">
                        <p class="py-2">First Name</p>
                        <p class="py-2 text-muted">@Model.UserProfile.User.FirstName</p>
                    </div>
                    <div class="d-flex align-items-center justify-content-between border-bottom">
                        <p class="py-2">Last Name</p>
                        <p class="py-2 text-muted">@Model.UserProfile.User.LastName</p>
                    </div>
                    <div class="d-flex align-items-center justify-content-between border-bottom">
                        <p class="py-2">Email</p>
                        <p class="py-2 text-muted">@Model.UserProfile.User.Email</p>
                    </div>
                    <div class="d-flex align-items-center justify-content-between border-bottom">
                        <p class="py-2">Phone</p>
                        <p class="py-2 text-muted">@Model.UserProfile.User.PhoneNumber</p>
                    </div>
                    <div class="d-flex align-items-center justify-content-between border-bottom">
                        <p class="py-2">City</p>
                        <p class="py-2 text-muted"> @Model.UserProfile.User.Address.City</p>
                    </div>
                    @*<div class="d-flex align-items-center justify-content-between border-bottom">
                        <p class="py-2">State</p>
                        <p class="py-2 text-muted"> @Model.State</p>
                    </div>*@
                    <div class="d-flex align-items-center justify-content-between border-bottom">
                        <p class="py-2">Street Address</p>
                        <p class="py-2 text-muted"> @Model.UserProfile.User.Address.Street</p>
                    </div>
                    <div class="d-flex align-items-center justify-content-between border-bottom">
                        <p class="py-2">Zip Code</p>
                        <p class="py-2 text-muted"> @Model.UserProfile.User.Address.PostalCode</p>
                    </div>
                    <div class="d-flex align-items-center justify-content-between border-bottom">
                        <p class="py-2">Age</p>
                        <p class="py-2 text-muted">@Model.UserProfile.User.Age</p>
                    </div>
                    <div class="d-flex align-items-center justify-content-between">
                        <p class="py-2">Gender</p>
                        <p class="py-2 text-muted">@Model.Gender</p>
                    </div>
            </div>
        </div>
    </div>
</div>