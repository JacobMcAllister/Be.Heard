@model BeHeard.Widgets.Models.PatientListModel

<ul class="list-group">
   <li class="list-group-item border-left-0 border-right-0 border-top-0">
      <div class="row">
         <div class="col-4 d-flex align-items-end"><h6>Patient</h6></div> 
         <div class="col-3 d-flex align-items-end"><h6>Phone Number</h6></div> 
         <div class="col-3 d-flex align-items-end"><h6>Email</h6></div> 
         <div class="col-2 d-flex align-items-end"><h6>Level</h6></div> 
      </div>
   </li>
   @foreach (var patient in Model.Patients)
   {
      <li id="@patient.Id" class="list-group-item">
         <div class="row">
            <div class="col-4">
               <a class="d-flex align-items-start">
                  <img src="~/images/@patient.icon" alt="User Avatar" class="rounded-circle"/>
                  <span>
                     <h6>@patient.FirstName @patient.LastName</h6>
                     <p class="text-muted">@patient.Gender, @patient.Age yr</p>
                  </span>
               </a>
            </div>
            <div class="col-3 d-flex align-items-center">
               <h6 class="text-muted">@patient.PhoneNumber</h6>
            </div>
            <div class="col-3 d-flex align-items-center">
               <h6 class="text-muted">@patient.Email</h6>
            </div>
            <div class="col-2 d-flex align-items-center">
               <h6 class="text-muted">Easy</h6>
            </div>
         </div>
      </li>
   }
</ul>

<script src="~/js/patient-list.js" defer></script>